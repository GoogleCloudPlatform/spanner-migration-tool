            //WebV2 debugger using global command line mode.
            "name": "webv2",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "args": [
                "-webv2",
            ]
        },
        {
            //WebV2 debugger using subcommands mode.
            "name": "webv2 subcommand",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/main.go",
            "args": [
                "web",
            ]
        },
        {
